{
  "name": "scurker.com",
  "author": "Jason Wilson",
  "version": "0.4.0",
  "description": "The website of Jason Wilson @scurker",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "build": "node ./lib/index.js",
    "postbuild": "npm run assets minify:*",
    "assets": "npm-run-all assets:sass assets:css",
    "assets:sass": "node-sass --include-path scss scss/global.scss build/assets/global.css",
    "assets:css": "postcss -c postcss.config.js build/assets/global.css -o build/assets/global.css",
    "lint": "eslint .",
    "minify:html": "html-minifier --input-dir ./build --output-dir ./build --file-ext html --collapse-whitespace --decode-entities --minify-css --minify-js",
    "preview": "npm run build && http-server ./build"
  },
  "devDependencies": {
    "@scurker/eslint-config": "^1.1.2",
    "eslint": "^4.19.1",
    "http-server": "^0.11.1"
  },
  "dependencies": {
    "autoprefixer": "^8.5.0",
    "babel": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "cheerio": "^1.0.0-rc.2",
    "cssnano": "^3.10.0",
    "glob": "^7.0.3",
    "handlebars": "^4.0.11",
    "highlight.js": "^9.12.0",
    "html-minifier": "^3.5.15",
    "metalsmith": "^2.3.0",
    "metalsmith-collections": "^0.9.0",
    "metalsmith-drafts": "0.0.1",
    "metalsmith-markdown": "^0.2.2",
    "metalsmith-perma": "^1.1.0",
    "minimatch": "^3.0.0",
    "moment": "^2.22.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "postcss": "^6.0.22",
    "postcss-cli": "^5.0.0",
    "postcss-url": "^7.3.2",
    "slug": "^0.9.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/scurker/scurker.com.git"
  },
  "license": "MIT"
}
