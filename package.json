{
  "name": "scurker.com",
  "author": "Jason Wilson",
  "version": "0.4.0",
  "description": "The website of Jason Wilson @scurker",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "build": "npm-run-all clean metalsmith",
    "clean": "rm -rf ./build/*",
    "postbuild": "npm run assets minify:* build:sw",
    "assets": "npm-run-all assets:sass assets:css assets:js",
    "assets:sass": "node-sass --include-path scss scss/global.scss build/assets/global.css",
    "assets:css": "postcss -c postcss.config.js styles/global.css -o build/assets/global.css",
    "assets:js": "BABEL_ENV=rollup rollup -c rollup.config.js",
    "build:sw": "BABEL_ENV=rollup rollup -c rollup.sw.config.js",
    "lint": "eslint .",
    "minify:html": "html-minifier --input-dir ./build --output-dir ./build --file-ext html --keep-closing-slash --collapse-whitespace --minify-css --minify-js",
    "metalsmith": "node ./lib/index.js",
    "preview": "http-server ./build",
    "watch": "npm-run-all --serial build --parallel preview watch:*",
    "watch:css": "npm run assets:css -- --watch",
    "watch:js": "npm run assets:js -- --watch"
  },
  "devDependencies": {
    "@scurker/eslint-config": "^1.1.5",
    "eslint": "^6.5.1",
    "http-server": "^0.11.1",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.1.2"
  },
  "dependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/register": "^7.6.2",
    "autoprefixer": "^9.6.4",
    "cheerio": "^1.0.0-rc.2",
    "cssnano": "^4.1.10",
    "glob": "^7.1.4",
    "got": "^9.6.0",
    "handlebars": "^4.4.2",
    "highlight.js": "^9.15.10",
    "html-minifier": "^4.0.0",
    "metalsmith": "^2.3.0",
    "metalsmith-collections": "^0.9.0",
    "metalsmith-drafts": "^0.1.0",
    "metalsmith-ignore": "^1.0.0",
    "metalsmith-markdown": "^1.2.0",
    "metalsmith-perma": "^1.1.1",
    "metalsmith-tweet-embed": "^1.0.1",
    "minimatch": "^3.0.4",
    "moment": "^2.24.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.18",
    "postcss-cli": "^6.1.3",
    "postcss-hash": "^1.0.2",
    "postcss-url": "^8.0.0",
    "rollup": "^1.23.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-hash": "^1.3.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-uglify": "^6.0.3",
    "slug": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/scurker/scurker.com.git"
  },
  "license": "MIT"
}
