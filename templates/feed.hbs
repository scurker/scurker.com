<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <link href="{{url}}"/>
  <title>{{name}}</title>
  <updated>{{date posts.0.date "YYYY-MM-DDTHH:mm:ssZ"}}</updated>
  <id>{{url}}/</id>
  <author>
    <name>{{author}}</name>
  </author>
  <atom:link xmlns:atom="http://www.w3.org/2005/Atom" rel="self" type="application/atom+xml" href="{{url}}/feed"/>

  <!-- feed entries -->
  {{#posts}}
  <entry>
    <title>{{title}}</title>
    <link href="{{../url}}/{{path}}" />
    <id>{{../url}}/{{path}}</id>
    <updated>{{date date "YYYY-MM-DDTHH:mm:ssZ"}}</updated>
    <content type="html">{{contents}}</content>
  </entry>
  {{/posts}}

</feed>